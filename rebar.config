{require_otp_vsn, "R14"}.

{erl_opts, [debug_info, warn_unused_vars, warn_shadow_vars, warn_unused_import]}.

{port_sources, ["c_src/*.c"]}.

{so_name, "erlgeos.so"}.

{port_envs, [
    % Link the GEOS C binding
    %{".*", "CFLAGS", "$CFLAGS -g -Wall"},
    {".*", "LDFLAGS", "$LDFLAGS -lgeos_c"}
]}.
